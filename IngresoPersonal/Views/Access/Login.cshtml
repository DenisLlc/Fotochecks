
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!-- Main Content -->
<div class="row main-content bg-success text-center">
    <div class="col-md-4 text-center company__info">        
        <a href="" class="my-2"> <img src="~/imgs/logo-tisur.svg" width="150"/> </a>
    </div>
    <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
        <div class="container-fluid py-3">
            <div class="row">
                <h2>Iniciar Sesión</h2>
            </div>
            <div class="row">
                <form control="@Url.Content("~/Access/Login")" class="form-group" method="post">
                    <div class="row">
                        <input type="text" name="User" id="username" class="form__input" placeholder="Nombre de Usuario">
                    </div>
                    <div class="row">
                        <!-- <span class="fa fa-lock"></span> -->
                        <input type="password" name="Pass" id="password" class="form__input" placeholder="Contraseña">
                    </div>
                    <div class="row">
                        <input type="submit" value="Ingresar" class="btn btn-outline-success ">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>