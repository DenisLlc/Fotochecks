@model IEnumerable<IngresoPersonal.Models.Users>

@{
    ViewBag.Title = "Usuarios";
}

<h2 class="mb-3">Usuarios</h2>

<p>
    @Html.ActionLink("Crear Usuario »", "Create", "Users", null, new { @class = " btn btn-primary " })
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.name)*@
                Nombre
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.lastName)*@
                Apellido
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.DNI)*@
                DNI
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.username)*@
                Nombre de Usuario
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.password)*@
                Contraseña
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.email)*@
                Correo
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Roles.name)*@
                Rol
            </th>
            <th>
                Acciones
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DNI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Roles.name)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = " btn btn-outline-warning btn-sm " }) 
                    @Html.ActionLink("Detalle", "Details", new { id = item.id }, new { @class = " btn btn-outline-success btn-sm " }) 
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = " btn btn-outline-danger btn-sm " })
                </td>
            </tr>
        }

    </table>
</div>
