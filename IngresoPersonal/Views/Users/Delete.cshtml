@model IngresoPersonal.Models.Users

@{
    ViewBag.Title = "Eliminar Usuario";
}

<h2>Eliminar</h2>

<div>
    <h4>Usuarios</h4>

    @Html.ActionLink("« Ver Usuarios", "Index", null, new { @class = " btn btn-primary" })

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.name)*@
            Nombres
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.lastName)*@
            Apellidos
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.DNI)*@
            DNI
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DNI)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.username)*@
            Nombre de usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.password)*@
            Contraseña
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.email)*@
            Correo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Roles.name)*@
            Rol
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Roles.name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        <h3>¿Estás seguro de querer eliminar este usuario?</h3>

        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </div>
    }
</div>
